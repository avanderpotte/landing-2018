#controlKit {
    position fixed
}

html body {
    font-family 'Nimbus Sans', sans-serif
    color $black
}

a {
    position relative
    color $black
    text-decoration none

    &:before {
        content ''
        position absolute
        bottom 0
        left 0
        width 100%
        height 10px
        opacity 0.1
        background-color $black
        transform scaleX( 0 )
        transform-origin right center
        transition transform 0.2s $ease-out-sine
    }

    &:hover {
        &:before {
            transform scaleX( 1 )
            transform-origin left center
            transition transform 0.2s $ease-in-sine
        }
    }
}
